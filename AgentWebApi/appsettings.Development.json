{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.SemanticKernel": "Information",
      "AgentWebApi.Services.SemanticKernel": "Debug",
      "AgentWebApi.Services.VectorDatabase": "Debug"
    }
  },
  "AllowedHosts": "*",
  
  // Semantic Kernel Configuration - 语义内核配置
  "SemanticKernel": {
    // OpenAI Configuration - OpenAI配置
    "OpenAIApiKey": "your-openai-api-key-here",
    "ChatModel": "gpt-3.5-turbo",
    "EmbeddingModel": "text-embedding-ada-002",
    
    // Azure OpenAI Configuration (Alternative) - Azure OpenAI配置（可选）
    // "AzureOpenAIEndpoint": "https://your-resource.openai.azure.com/",
    // "AzureOpenAIApiKey": "your-azure-openai-key",
    // "AzureChatDeploymentName": "gpt-35-turbo",
    // "AzureEmbeddingDeploymentName": "text-embedding-ada-002",
    
    // Model Parameters - 模型参数
    "MaxTokens": 1000,
    "Temperature": 0.7,
    
    // Memory Configuration - 记忆配置
    "EnableMemory": true,
    "DefaultMemoryCollection": "default"
  },
  
  // Vector Database Configuration - 向量数据库配置
  "ConnectionStrings": {
    "ChromaDb": "http://localhost:8000"
  },
  
  // ChromaDB Configuration - ChromaDB配置
  "ChromaDb": {
    "Url": "http://localhost:8000",
    "TimeoutSeconds": 30,
    "DefaultCollection": "documents",
    "Authentication": {
      "Username": "admin",
      "Password": "chromadb123"
    }
  },
  
  // OpenTelemetry Configuration - OpenTelemetry配置
  "OpenTelemetry": {
    "ServiceName": "AgentWebApi",
    "ServiceVersion": "1.0.0",
    "Exporters": {
      "Console": true,
      "Jaeger": false,
      "OTLP": false
    }
  },
  
  // Dapr Configuration - Dapr配置
  "Dapr": {
    "HttpEndpoint": "http://localhost:3500",
    "GrpcEndpoint": "http://localhost:50001",
    "AppId": "agent-webapi"
  },
  
  // CORS Configuration - CORS配置
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5173"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "AllowCredentials": true
  },
  
  // Rate Limiting Configuration - 速率限制配置
  "RateLimit": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "Window": "00:01:00",
    "QueueLimit": 10
  },
  
  // Authentication Configuration - 身份验证配置
  "Authentication": {
    "EnableBasicAuth": true,
    "Users": [
      {
        "Username": "admin",
        "Password": "admin123",
        "Roles": ["Admin"]
      },
      {
        "Username": "user",
        "Password": "user123", 
        "Roles": ["User"]
      }
    ]
  }
}

