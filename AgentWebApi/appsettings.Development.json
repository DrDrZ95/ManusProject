{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "AgentWebApi.Services.Sandbox": "Debug"
    }
  },
  "AllowedHosts": "*",
  
  // Workflow Configuration - 工作流配置
  "Workflow": {
    "DefaultToDoDirectory": "todo_lists",
    "EnableAutoSave": true,
    "AutoSaveIntervalMinutes": 5,
    "MaxPlansInMemory": 100,
    "EnableDetailedLogging": true
  },

  // Sandbox Terminal Configuration - 沙盒终端配置
  "SandboxTerminal": {
    "DefaultWorkingDirectory": "/tmp/sandbox",
    "DefaultTimeout": 30,
    "MaxTimeout": 300,
    "EnableLogging": true,
    "EnableSanitization": true,
    
    // 允许的命令列表（如果为空，则允许所有命令）
    // Allowed commands list (if empty, all commands are allowed)
    "AllowedCommands": [
      // 留空表示允许所有命令，或者指定特定命令
      // Leave empty to allow all commands, or specify specific commands
      // "ls", "pwd", "echo", "cat", "grep", "find", "python3", "node", "npm"
    ],
    
    // 阻止的危险命令列表
    // Blocked dangerous commands list
    "BlockedCommands": [
      "rm -rf /",
      "rm -rf /*",
      "mkfs",
      "dd if=/dev/zero",
      ":(){ :|:& };:",
      "chmod -R 777 /",
      "chown -R root /",
      "sudo rm -rf",
      "format",
      "fdisk",
      "parted",
      "shutdown",
      "reboot",
      "halt",
      "poweroff"
    ],
    
    // 环境变量设置
    // Environment variables settings
    "EnvironmentVariables": {
      "TERM": "xterm-256color",
      "LANG": "en_US.UTF-8",
      "LC_ALL": "en_US.UTF-8",
      "PATH": "/usr/local/bin:/usr/bin:/bin"
    }
  },

  // OpenTelemetry Configuration
  "OpenTelemetry": {
    "ServiceName": "AgentWebApi",
    "ServiceVersion": "1.0.0"
  },

  // Dapr Configuration
  "Dapr": {
    "HttpEndpoint": "http://localhost:3500",
    "GrpcEndpoint": "http://localhost:50001"
  },

  // ChromaDB Configuration
  "ChromaDB": {
    "ConnectionString": "http://localhost:8000",
    "DefaultCollection": "agent_knowledge",
    "Timeout": 30
  },

  // Semantic Kernel Configuration
  "SemanticKernel": {
    "OpenAI": {
      "ApiKey": "your-openai-api-key-here",
      "ModelId": "gpt-4",
      "EmbeddingModelId": "text-embedding-ada-002"
    },
    "DefaultTimeout": 60
  },

  // RAG Configuration
  "RAG": {
    "DefaultTopK": 5,
    "DefaultThreshold": 0.7,
    "HybridRetrievalWeights": {
      "VectorWeight": 0.6,
      "KeywordWeight": 0.3,
      "SemanticWeight": 0.1
    }
  }
}

