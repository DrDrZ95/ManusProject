{
  // --------------------------------------------------------------------------------
  // 基础配置 (Common Configuration)
  // --------------------------------------------------------------------------------
  "Logging": {
    "LogLevel": {
      "Default": "Information", // 默认日志级别 - Default logging level
      "Microsoft.AspNetCore": "Warning" // ASP.NET Core 框架日志级别 - ASP.NET Core framework logging level
    }
  },
  "AllowedHosts": "*", // 允许的主机 - Allowed hosts

  // --------------------------------------------------------------------------------
  // 连接字符串 (Connection Strings)
  // --------------------------------------------------------------------------------
  "ConnectionStrings": {
    // PostgreSQL 数据库连接字符串 - PostgreSQL database connection string
    "DefaultConnection": "Host=localhost;Port=5432;Database=agentdb;Username=postgres;Password=yourpassword",
    // ChromaDB 向量数据库连接字符串 - ChromaDB vector database connection string
    "ChromaDbConnection": "http://localhost:8000"
  },

  // --------------------------------------------------------------------------------
  // 缓存和消息队列 (Cache and Message Queue)
  // --------------------------------------------------------------------------------
  "Redis": {
    // Redis 连接字符串 (用于缓存和 Hangfire 存储) - Redis connection string (for cache and Hangfire storage)
    "ConnectionString": "localhost:6379"
  },

// --------------------------------------------------------------------------------
// JWT 认证设置 (JWT Authentication Settings)
// --------------------------------------------------------------------------------
"JwtSettings": {
  "Secret": "ThisIsAVeryLongAndSecureKeyForJWTTokenSigningDoNotUseInProduction", // JWT 签名密钥 - JWT signing key
  "Issuer": "AgentApi", // 签发者 - Token issuer
  "Audience": "AgentUsers", // 接收者 - Token audience
  "ExpiryMinutes": 60 // Token 有效期 (分钟) - Token expiry time (minutes)
},

  // --------------------------------------------------------------------------------
  // 可观测性设置 (Observability Settings)
  // --------------------------------------------------------------------------------
  "OpenTelemetry": {
    // Jaeger/Zipkin 导出器地址 - Jaeger/Zipkin exporter endpoint
    "ExporterEndpoint": "http://localhost:4317"
  },
  "ElasticApm": {
    // Elastic APM Server 地址 - Elastic APM Server URL
    "ServerUrl": "http://localhost:8200",
    // 服务名称 - Service name
    "ServiceName": "Agent.Api",
    // 环境名称 - Environment name
    "Environment": "Common"
  }
}
