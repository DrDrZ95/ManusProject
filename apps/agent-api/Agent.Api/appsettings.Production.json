{
  // --------------------------------------------------------------------------------
  // 生产环境配置 (Production Environment Configuration)
  // --------------------------------------------------------------------------------
  "Logging": {
    "LogLevel": {
      "Default": "Error", // 生产环境使用 Error 级别日志 - Use Error level logging in production
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    // 生产环境数据库连接 - Production database connection
    "DefaultConnection": "Host=prod-db;Port=5432;Database=agentdb_prod;Username=agent_user;Password=production_password",
    "ChromaDbConnection": "http://prod-chromadb:8000"
  },

  "Redis": {
    // 生产环境 Redis 连接 - Production Redis connection
    "ConnectionString": "prod-redis:6379"
  },

  "ElasticApm": {
    "Environment": "Production" // Elastic APM 环境名称 - Elastic APM environment name
  }
}
